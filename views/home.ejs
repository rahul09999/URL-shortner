<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shawwwty - Modern URL Shortener</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
    <div class="animated-bg"></div>
    
    <%- include('partials/header') %>
    
    <div class="container">
        <div class="hero">
            <div class="hero-badge">
                <span>✨ Free Forever</span> · Shorten URLs in seconds
            </div>
            <h1>
                Make Your Links<br>
                <span class="gradient-text">Short & Beautiful</span>
            </h1>
            <p>Transform long, complex URLs into clean, shareable links. Track clicks and analyze your audience with powerful analytics.</p>
        </div>

        <div class="url-form-container">
            <form action="/url" method="post" class="url-form" id="urlForm">
                <div class="input-wrapper">
                    <input 
                        type="url" 
                        name="url" 
                        class="url-input" 
                        placeholder="Paste your long URL here..." 
                        required
                        autofocus
                    >
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                    </svg>
                </div>
                <button type="submit" class="shorten-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    Shorten URL
                </button>
            </form>
            
            <div class="result-container <%= typeof id !== 'undefined' && id ? 'show' : '' %>" id="resultContainer">
                <div class="result-label">Your shortened URL is ready!</div>
                <div class="result-url">
                    <input type="text" id="shortUrl" readonly value="<%= typeof id !== 'undefined' && id ? (typeof BASE_URL !== 'undefined' ? BASE_URL : 'http://localhost:3000') + '/url/' + id : '' %>">
                    <button class="copy-btn" id="copyBtn" type="button" onclick="copyToClipboard()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        Copy
                    </button>
                </div>
            </div>
        </div>

        <% if (urls && urls.length > 0) { %>
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number"><%= typeof totalUrls !== 'undefined' ? totalUrls : urls.length %></div>
                <div class="stat-label">Total Links Created</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= urls.reduce((acc, url) => acc + (url.visitedHistory ? url.visitedHistory.length : 0), 0) %></div>
                <div class="stat-label">Total Clicks</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= urls.length > 0 ? Math.round(urls.reduce((acc, url) => acc + (url.visitedHistory ? url.visitedHistory.length : 0), 0) / urls.length * 10) / 10 : 0 %></div>
                <div class="stat-label">Avg. Clicks per Link</div>
            </div>
        </div>
        <% } %>

        <div class="analytics-section">
            <div class="section-header">
                <h2 class="section-title">
                    <span class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </span>
                    Your Links
                </h2>
            </div>
            
            <% if (urls && urls.length > 0) { %>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Short ID</th>
                                <th>Original URL</th>
                                <th>Clicks</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% 
                                const pageNum = typeof currentPage !== 'undefined' ? currentPage : 1;
                                const pageLimit = typeof limit !== 'undefined' ? limit : 10;
                                const startIndex = (pageNum - 1) * pageLimit;
                            %>
                            <% urls.forEach((url, index) => { %>
                                <tr style="animation: fadeInUp 0.4s ease-out <%= index * 0.05 %>s both;" id="url-row-<%= url.shortId %>">
                                    <td>
                                        <span class="index-badge"><%= startIndex + index + 1 %></span>
                                    </td>
                                    <td>
                                        <span class="short-id">
                                            <a href="<%= typeof BASE_URL !== 'undefined' ? BASE_URL : 'http://localhost:3000' %>/url/<%= url.shortId %>" target="_blank" rel="noopener">
                                                <%= url.shortId %>
                                            </a>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="redirect-url" title="<%= url.redirectUrl %>">
                                            <%= url.redirectUrl %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="clicks-badge"><%= url.visitedHistory ? url.visitedHistory.length : 0 %></span>
                                    </td>
                                    <td>
                                        <button class="delete-btn" onclick="deleteShortUrl('<%= url.shortId %>')" title="Delete this short URL">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination Controls -->
                <% if (typeof totalPages !== 'undefined' && totalPages > 1) { 
                    const paginationPage = typeof currentPage !== 'undefined' ? currentPage : 1;
                    const paginationLimit = typeof limit !== 'undefined' ? limit : 10;
                %>
                <div class="pagination-container">
                    <div class="pagination-info">
                        Showing <%= ((paginationPage - 1) * paginationLimit) + 1 %> - <%= Math.min(paginationPage * paginationLimit, totalUrls) %> of <%= totalUrls %> links
                    </div>
                    <div class="pagination-buttons">
                        <% if (paginationPage > 1) { %>
                            <a href="?page=<%= paginationPage - 1 %>&limit=<%= paginationLimit %>" class="pagination-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                                Previous
                            </a>
                        <% } else { %>
                            <span class="pagination-btn disabled">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                                Previous
                            </span>
                        <% } %>

                        <div class="pagination-numbers">
                            <% 
                                let startPage = Math.max(1, paginationPage - 2);
                                let endPage = Math.min(totalPages, paginationPage + 2);
                                
                                if (startPage > 1) { %>
                                    <a href="?page=1&limit=<%= paginationLimit %>" class="pagination-number">1</a>
                                    <% if (startPage > 2) { %>
                                        <span class="pagination-ellipsis">...</span>
                                    <% } %>
                                <% }
                                
                                for (let i = startPage; i <= endPage; i++) { %>
                                    <% if (i === paginationPage) { %>
                                        <span class="pagination-number active"><%= i %></span>
                                    <% } else { %>
                                        <a href="?page=<%= i %>&limit=<%= paginationLimit %>" class="pagination-number"><%= i %></a>
                                    <% } %>
                                <% }
                                
                                if (endPage < totalPages) { %>
                                    <% if (endPage < totalPages - 1) { %>
                                        <span class="pagination-ellipsis">...</span>
                                    <% } %>
                                    <a href="?page=<%= totalPages %>&limit=<%= paginationLimit %>" class="pagination-number"><%= totalPages %></a>
                                <% } %>
                        </div>

                        <% if (paginationPage < totalPages) { %>
                            <a href="?page=<%= paginationPage + 1 %>&limit=<%= paginationLimit %>" class="pagination-btn">
                                Next
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        <% } else { %>
                            <span class="pagination-btn disabled">
                                Next
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </span>
                        <% } %>
                    </div>
                </div>
                <% } %>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                        </svg>
                    </div>
                    <h3>No links yet</h3>
                    <p>Start shortening your URLs above and they'll appear here with detailed analytics.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        // Theme toggle
        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
        }
        
        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
        }
        
        initTheme();

        // Copy to clipboard function
        function copyToClipboard() {
            const shortUrlInput = document.getElementById('shortUrl');
            shortUrlInput.select();
            shortUrlInput.setSelectionRange(0, 99999);
            
            navigator.clipboard.writeText(shortUrlInput.value).then(() => {
                const copyBtn = document.getElementById('copyBtn');
                const originalHTML = copyBtn.innerHTML;
                copyBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg> Copied!';
                copyBtn.classList.add('copied');
                
                setTimeout(() => {
                    copyBtn.innerHTML = originalHTML;
                    copyBtn.classList.remove('copied');
                }, 2000);
            });
        }

        // Scroll to result if newly generated
        const resultContainer = document.getElementById('resultContainer');
        if (resultContainer && resultContainer.classList.contains('show')) {
            resultContainer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        // Delete short URL function
        async function deleteShortUrl(shortId) {
            if (!confirm('Are you sure you want to delete this short URL? This action cannot be undone.')) {
                return;
            }

            try {
                const response = await fetch(`/url/${shortId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });

                if (response.ok) {
                    // Remove the row from the table
                    const row = document.getElementById(`url-row-${shortId}`);
                    if (row) {
                        row.style.transition = 'opacity 0.3s ease-out';
                        row.style.opacity = '0';
                        setTimeout(() => {
                            row.remove();
                            // Reload the page to update the stats
                            window.location.reload();
                        }, 300);
                    }
                } else {
                    const data = await response.json();
                    alert(data.error || 'Failed to delete short URL');
                }
            } catch (error) {
                console.error('Error deleting short URL:', error);
                alert('An error occurred while deleting the short URL. Please try again.');
            }
        }
    </script>
</body>
</html>
